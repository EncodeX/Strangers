<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
	<ImageView
		android:id="@+id/welcome_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/welcome_background"
		android:scaleType="centerCrop"/>

	<RelativeLayout
		android:id="@+id/app_logo_area"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">

		<ImageView
			android:id="@+id/app_logo"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_marginRight="128dp"
			android:layout_marginLeft="16dp"
			android:src="@drawable/app_logo"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:gravity="left"
			android:layout_below="@id/app_logo">
			<com.material.widget.PaperButton
				android:id="@+id/button_register"
				android:layout_width="wrap_content"
				android:layout_height="64dp"
				android:layout_marginRight="16dp"
				app:paper_text="注册"
				android:layout_weight="1"/>
			<com.material.widget.PaperButton
				android:id="@+id/button_login"
				android:layout_width="wrap_content"
				android:layout_height="64dp"
				app:paper_text="登录"
				app:paper_color="#9C27B0"
				app:paper_text_color="#fff"
				app:paper_is_light_ripple="true"
				android:layout_weight="1"/>
		</LinearLayout>
	</RelativeLayout>

</RelativeLayout>
