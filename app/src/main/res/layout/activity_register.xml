<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@color/background_material_light">
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_marginTop="?attr/actionBarSize"
		android:background="@drawable/simple_shadow"
		android:alpha="0.5"/>

	<android.support.v7.widget.Toolbar
		android:id="@+id/tool_bar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="#9C27B0"
		android:theme="@style/AppTheme.Toolbar"
		app:popupTheme="@style/AppTheme.Toolbar.Popup"
		app:title="注册"/>

	<RelativeLayout
		android:layout_below="@id/tool_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:focusable="true"
		android:focusableInTouchMode="true">
		<TextView
			android:id="@+id/error_dialog"
			android:layout_width="match_parent"
			android:layout_height="24dp"
			android:gravity="center_vertical"
			android:layout_marginBottom="8dp"
			android:textColor="#E91E63"
			android:textSize="18sp"
			android:visibility="gone"/>

		<com.material.widget.FloatingEditText
			android:id="@+id/user_name_input"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_below="@id/error_dialog"
			app:floating_edit_text_highlighted_color="?attr/colorPrimary"
			android:cursorVisible="true"
			android:textColor="?attr/colorPrimary"
			android:textSize="20sp"
			android:singleLine="true"
			android:hint="用户名"/>
		<com.material.widget.FloatingEditText
			android:id="@+id/password_input"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_below="@id/user_name_input"
			app:floating_edit_text_highlighted_color="?attr/colorPrimary"
			android:cursorVisible="true"
			android:textColor="?attr/colorPrimary"
			android:textSize="20sp"
			android:inputType="textPassword"
			android:singleLine="true"
			android:hint="密码"/>
		<com.material.widget.FloatingEditText
			android:id="@+id/password_second_input"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_below="@id/password_input"
			app:floating_edit_text_highlighted_color="?attr/colorPrimary"
			android:cursorVisible="true"
			android:textColor="?attr/colorPrimary"
			android:textSize="20sp"
			android:inputType="textPassword"
			android:singleLine="true"
			android:hint="密码二次确认"/>
		<com.material.widget.FloatingEditText
			android:id="@+id/phone_input"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_below="@id/password_second_input"
			app:floating_edit_text_highlighted_color="?attr/colorPrimary"
			android:cursorVisible="true"
			android:textColor="?attr/colorPrimary"
			android:textSize="20sp"
			android:inputType="number"
			android:singleLine="true"
			android:hint="手机号"/>
		<com.material.widget.FloatingEditText
			android:id="@+id/email_input"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_below="@id/phone_input"
			app:floating_edit_text_highlighted_color="?attr/colorPrimary"
			android:cursorVisible="true"
			android:textColor="?attr/colorPrimary"
			android:textSize="20sp"
			android:inputType="textWebEmailAddress"
			android:imeOptions="actionDone"
			android:singleLine="true"
			android:hint="邮箱"/>
		<com.material.widget.PaperButton
			android:id="@+id/register_button"
			android:layout_width="match_parent"
			android:layout_height="64dp"
			app:paper_color="?attr/colorPrimary"
			app:paper_text="注册"
			app:paper_text_color="#fff"
			android:layout_alignRight="@id/email_input"
			android:layout_below="@id/email_input"
			app:paper_is_light_ripple="true"/>
	</RelativeLayout>
</RelativeLayout>
